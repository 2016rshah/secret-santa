  body
    .container
      h1 Spreadsheet randomizer
      p Enter your spreadhseet ID and press enter
      input(type='text', size="48")#inp
      script(type='text/javascript').
        var inp = document.getElementById("inp")
        inp.addEventListener('keyup', function(e){
          if(e.keyCode == 13){
            console.log(inp.value)
            window.location.href = "/randomize/"+inp.value;
          }
        })


